@page "/register"
@inject IAuthService AuthService

<PageTitle>Registrácia | @Keywords.DefaultPageTitle</PageTitle>

<h3>Registrácia</h3>

@if (Message is not null)
{
    <Alert type="@_messageType">
        @Message
    </Alert>
}

<EditForm Model="_userRegister" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator/>
    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="_userRegister.EmailAddress" class="form-control"/>
        <ValidationMessage For="@(() => _userRegister.EmailAddress)"/>
    </div>
    <div class="mb-3">
        <label for="firstname">Meno</label>
        <InputText id="firstname" @bind-Value="_userRegister.FirstName" class="form-control"/>
        <ValidationMessage For="@(() => _userRegister.FirstName)"/>
    </div>
    <div class="mb-3">
        <label for="lastname">Priezvisko</label>
        <InputText id="lastname" @bind-Value="_userRegister.LastName" class="form-control"/>
        <ValidationMessage For="@(() => _userRegister.LastName)"/>
    </div>
    <div class="mb-3">
        <label for="password">Heslo</label>
        <InputText id="password" @bind-Value="_userRegister.Password" class="form-control" type="password"/>
        <ValidationMessage For="@(() => _userRegister.Password)"/>
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Potvrdenie hesla</label>
        <InputText id="confirmPassword" @bind-Value="_userRegister.ConfirmPassword" class="form-control" type="password"/>
        <ValidationMessage For="@(() => _userRegister.ConfirmPassword)"/>
    </div>
    <ValidationSummary/>

    <button type="submit" class="btn btn-primary  btn-lg">Zaregistrovať</button>
</EditForm>

@code {
    private UserRegister _userRegister { get; set; } = new();
    private string? Message { get; set; }
    private string _messageType = string.Empty;

    private async Task HandleRegister()
    {
        var response = await AuthService.Register(_userRegister);

        Message = response.Message;
        _messageType = response.Success ? Keywords.AlertSuccess : Keywords.AlertDanger;
    }

}