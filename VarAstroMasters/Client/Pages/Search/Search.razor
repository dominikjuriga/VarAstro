@page "/Search"
@inject IStarService StarService
@inject NavigationManager NavigationManager

@if (Message is not null)
{
    <MudAlert Severity="Severity.Error">@Message</MudAlert>
}

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h3">Vyhľadávanie</MudText>
        <MudFocusTrap DefaultFocus="DefaultFocus">
            <MudTextField @bind-Value="Query" Label="Dotaz"/>
        </MudFocusTrap>
    </MudCardContent>
    <MudCardActions>
        <MudButton OnClick="HandleSearch">Vyhľadať</MudButton>
    </MudCardActions>
</MudCard>

@code {
    private string Query { get; set; } = string.Empty;
    private string? Message { get; set; }
    DefaultFocus DefaultFocus { get; set; } = DefaultFocus.FirstChild;

    private void HandleSearch()
    {
        if (Query.Length < 3)
        {
            Message = "Dĺžka musí byť aspoň 3 znaky.";
        }
        else
        {
            NavigationManager.NavigateTo($"/Search/{Query}");
        }
    }

}